{% if section.settings.enable_countdown %}

<section class="countdown-bar-container">
  <div class="countdown-bar-header">
    <h1> {{section.settings.title}} </h1>
  </div>
<div class="countdown" id="countdown" data-date="16-8-2021" data-time="00:00">
  <div class="day">
    <span class="num"></span>
    <span class="word"></span>
  </div>
   <div class="hour">
    <span class="num"></span>
    <span class="word"></span>
  </div>
   <div class="min">
    <span class="num"></span>
    <span class="word"></span>
  </div>
   <div class="sec">
    <span class="num"></span>
    <span class="word"></span>
  </div>
  </div>
</section>

{% endif %}

{% schema %}
  {
    "name": "Countdown_Bar",
    "settings": [

              {

				"type":"checkbox",
				"id":"enable_countdown",
				"default":false,
				"label":"Enable Countdown"
              },

              {

				"type":"text",
				"id":"title",
				"default":"SALE TEXT HERE",
				"label":"Sale Title Text"
              }




]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}


<script>
  const efcc_countdown = new countdown({
  target: '.countdown',
  dayWord: ' days',
  hourWord: ' hours',
  minWord: ' mins',
  secWord: ' secs'
});
  
</script>

